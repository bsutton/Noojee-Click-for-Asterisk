{
	"name" : "Noojee Click for Asterisk",
	"version" : "0.94",
	"manifest_version": 2,
	"description" : "Turns phone numbers in any web page into 'click to dial' links. With Noojee Click and Asterisk you can dial any phone number on a web page with a single click.",
	"background" : { "page": "background.html"},
	"options_page" : "options.html",
	"icons" : {
		"128" : "img/phone-128.png"
	},
	"content_scripts": [
	{
		"matches": ["*://*/*"],
		"js": [
			"js/namespace.js", 
			"js/lib.js",
			"js/browser_util.js", 
			"js/util.js",
			"js/api.js",
			"js/monitor.js",    
			"js/phonepatterns.js", 
			"js/noojeeclick.js", 
			"js/prefs.js", 
			"js/logging.js", 
			"js/prompts.js", 
			"js/render.js", 
			"js/handlers.js", 
			"js/messagepassing.js", 
			"js/contentscript.js" 
			]
	}
	],
	"permissions" : [
		"http://*/", 
		"contextMenus",
		"notifications"
	],
	"browser_action": {
	"default_icon": {                 
			"19": "img/icon-19.png",
            "73": "img/noojeeclick.png"
          },
    "default_title": "Noojee Click for Asterisk",
    "default_popup": "menu.html"
  },
   "web_accessible_resources": [
    "img/*.png"
  ]
  
}

